<Page x:Class="SpellingChunkWPF.LogicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpellingChunkWPF"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Kidzone - LogicPage">

    <Grid Name="MainGrid" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Aplhabet - " Name="txtHeader" Grid.ColumnSpan="4" Grid.Row="0" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}" VerticalAlignment="Top" FontWeight="Bold" FontSize="24" TextAlignment="Center"/>
        <Button x:Name="btnCancel" Command="{x:Static NavigationCommands.BrowseBack}" Content="Cancel" Grid.Row="2" Grid.Column="1" Width="100" HorizontalAlignment="Center" VerticalAlignment="Top" ></Button>
        <Button x:Name="btnNext" Click="btnNext_Click"  Content="Next" Grid.Row="2" Grid.Column="2" Width="100" HorizontalAlignment="Center" VerticalAlignment="Top"></Button>

    </Grid>
</Page>
